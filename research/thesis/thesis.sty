\renewcommand{\@makechapterhead}[1]{%
  \vspace*{50\p@}%
  {\parindent \z@ \raggedright \normalfont
    \ifnum \c@secnumdepth >\m@ne
        {\huge\scshape \@chapapp\space \thechapter
        \par\nobreak
        \vskip 20\p@}
    \fi
    \interlinepenalty\@M
    \begin{flushright}
      \hrule
      \vspace{5mm}
      {\Huge\scshape #1\par}
      \vspace{5mm}
      %\hrule
    \end{flushright}
      \nobreak
    \vskip 40\p@
  }}

\renewcommand{\@makeschapterhead}[1]{%
  \vspace*{50\p@}%
  {\parindent \z@ \raggedright
    \normalfont
    \interlinepenalty\@M
    {\Huge \scshape #1\par}
    \vspace{2mm}
    \hrule
    \nobreak
    \vskip 40\p@
  }}
